<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TextView ở trên cùng -->
    <TextView
        android:id="@+id/studentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cái Thị Nhân Đức - 22115053122039"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <!-- Sử dụng một LinearLayout để căn giữa các nút -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Tin Nhắn" />

        <Button
            android:id="@+id/btnCallLogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Nhật Ký Cuộc Gọi" />

        <Button
            android:id="@+id/btnContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Danh Bạ" />
    </LinearLayout>

</LinearLayout>
